<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="04.05.2021 WEATHER DATABASE" author="Marek Siinvert">
        <createTable tableName="weather">
            <column name="id" type="int" autoIncrement="true" >
                <constraints primaryKey="true"/>
            </column>
            <column name="city_name" type="text"/>
            <column name="temperature" type="text"/>
            <column name="wind_speed" type="text"/>
            <column name="wind_deg" type="text"/>

        </createTable>
    </changeSet>
    <changeSet id="04.05.2021 WEATHER DATABASE ADD TIME" author="Marek Siinvert">
        <addColumn tableName="weather">
            <column name="date" type="timestamp"></column>
        </addColumn>

    </changeSet>


</databaseChangeLog>
